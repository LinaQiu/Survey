<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Survey">

    <LinearLayout
        style="@style/FitWidth"
        android:orientation="vertical">
        <TextView
            android:id="@+id/Question3"
            style="@style/SurveyQuestion"
            android:text="test"/>

        <LinearLayout
            style="@style/SurveyAnswer"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/cb_device_sharing_q3_a"
                style="@style/WrapContent"
                android:text="@string/DeviceSharing_Q3_a"/>

            <CheckBox
                android:id="@+id/cb_device_sharing_q3_b"
                style="@style/WrapContent"
                android:text="@string/DeviceSharing_Q3_b"/>

            <CheckBox
                android:id="@+id/cb_device_sharing_q3_c"
                style="@style/WrapContent"
                android:text="@string/DeviceSharing_Q3_c"/>

            <CheckBox
                android:id="@+id/cb_device_sharing_q3_d"
                style="@style/WrapContent"
                android:text="@string/DeviceSharing_Q3_d"/>

            <CheckBox
                android:id="@+id/cb_device_sharing_q3_e"
                style="@style/WrapContent"
                android:text="@string/DeviceSharing_Q3_e"/>
            <EditText
                android:id="@+id/et_please_specify"
                style="@style/SurveyAnswer"
                android:hint="@string/pleaseSpecify"
                android:enabled="false"/>
        </LinearLayout>

        <!--
        <include layout="@layout/layout_answers"/>
